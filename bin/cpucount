#!/bin/bash

case "$(uname -s)" in
Darwin)
    sysctl -n hw.ncpu
    ;;
Linux)
    grep -c ^processor /proc/cpuinfo
    ;;
CYGWIN*|MINGW*|MSYS*)
    #echo $NUMBER_OF_PROCESSORS
    ## OR:
    WMIC CPU Get NumberOfLogicalProcessors
    ;;
*)
    echo 'Not found platform.' 1>&2
    exit 1
    ;;
esac

exit 0

